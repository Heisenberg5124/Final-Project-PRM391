<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedSquareBubble">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10dp</item>
    </style>
    
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="GenderChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/gender_chip_background_color</item>
        <item name="chipStrokeColor">@color/gender_chip_stroke_color</item>
        <item name="android:textColor">@color/gender_chip_text_color</item>
    </style>

    <style name="WhiteCursorSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">#686868</item>
    </style>

    <style name="AppThemeFirebaseAuth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:actionBarStyle">@style/FirebaseAuthActionBarStyle</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FirebaseAuthActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>
</resources>