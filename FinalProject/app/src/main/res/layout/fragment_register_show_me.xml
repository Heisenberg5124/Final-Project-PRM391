<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.register.ui.RegisterShowMeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_show_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Show Me"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/chip_group_register_show_me"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_register_show_me"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/button_register_continue_show_me"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_show_me"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_register_show_me_male"
                style="@style/GenderChipStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:text="MALE"
                android:textAlignment="center"
                app:checkedIcon="@null"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_register_show_me_female"
                style="@style/GenderChipStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:text="FEMALE"
                android:textAlignment="center"
                app:checkedIcon="@null"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_register_show_me_both"
                style="@style/GenderChipStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:text="BOTH"
                android:textAlignment="center"
                app:checkedIcon="@null"
                app:chipStrokeWidth="1.5dp" />
        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/button_register_continue_show_me"
            android:layout_width="270dp"
            android:layout_height="46dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/background_button_un_clicked"
            android:clickable="false"
            android:enabled="false"
            android:text="CONTINUE"
            android:textColor="#A3A3A3"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>